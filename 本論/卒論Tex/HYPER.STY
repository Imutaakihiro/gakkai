\newdimen\bmp@tk \bmp@tk=0pt % thickness of rule

\def\bmpfile(#1,#2)#3{%
  \@tempdima\normalbaselineskip \advance\@tempdima by-1zh
  \vskip\@tempdima
  \leavevmode\vbox{\@ifundefined{yoko}{}{\yoko}%
  \special{Windows org}
